<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvSelectedDay"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_day_details_height"
        android:text="@string/day_label_example"
        android:textSize="@dimen/text_size_24"
        android:textStyle="bold"
        android:textColor="@color/primaryColor"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/indent_16"
        android:layout_marginTop="@dimen/indent_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvWeatherInHours"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/indent_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSelectedDay"
        tools:itemCount="12"
        tools:listitem="@layout/item_day_details_weather" />

</androidx.constraintlayout.widget.ConstraintLayout>