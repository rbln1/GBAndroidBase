<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/primaryColor"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/indent_16"
    android:paddingTop="@dimen/indent_16"
    android:paddingRight="@dimen/indent_16"
    android:paddingBottom="@dimen/indent_16"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/navHeaderLogo"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:contentDescription="@string/nav_header_desc"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        app:srcCompat="@drawable/ic_city" />

    <TextView
        android:id="@+id/navHeaderTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        tools:text="Moscow"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/navHeaderSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="16.2342, 54.3321" />
</LinearLayout>